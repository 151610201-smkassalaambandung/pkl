<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/uin"
    tools:context="pulau.com.materikeagamaan.Main2Activity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:text="Kalimat Thoyyibah"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#f9a340"
                android:layout_marginTop="15dp"
                android:id="@+id/button1" />

            <Button
                android:text="Ibadah"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#9208a4"
                android:textColor="#ff000000"
                android:layout_marginTop="10dp"
                android:id="@+id/button2" />

            <Button
                android:text="Aqidah"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#f9a340"
                android:layout_marginTop="10dp"
                android:id="@+id/button3" />

            <Button
                android:text="Tarikh"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#9208a4"
                android:layout_marginTop="10dp"
                android:id="@+id/button4" />

            <Button
                android:text="Akhlaq"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#f9a340"
                android:layout_marginTop="10dp"
                android:id="@+id/button5" />

            <Button
                android:text="Surat Pendek"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#9208a4"
                android:layout_marginTop="10dp"
                android:id="@+id/button6" />

            <Button
                android:text="Do'a Harian"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#f9a340"
                android:layout_marginTop="10dp"
                android:id="@+id/button7" />

            <Button
                android:text="BTHQ"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#9208a4"
                android:layout_marginTop="10dp"
                android:id="@+id/button8" />

            <Button
                android:text="PROFIL"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#f9a340"
                android:layout_marginTop="10dp"
                android:id="@+id/button9" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
