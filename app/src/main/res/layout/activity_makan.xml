<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_makan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="pulau.com.materikeagamaan.Makan">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg"
                android:text="1.Sebelum makan mencuci tangan terlebih dahulu\n\n"
                android:textSize="15dp"
                android:id="@+id/textView3"
                android:layout_marginTop="16dp"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/d"
                android:id="@+id/imageView3"
                android:layout_below="@+id/textView3"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg"
                android:text="\n2. Membawa alas makan dan menyiapkan makanan di atas meja\n\n"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/l"
                android:layout_below="@+id/textView3"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg"
                android:text="\n3. Duduk yang rapih lalu membaca doa sebelum makan\n\n"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/m"
                android:layout_below="@+id/textView3"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg"
                android:text="\n4. Makan dengan tertib tidak sambil berbicara atau
       berjalan/berdiri\n\n"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/n"
                android:layout_below="@+id/textView3"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg"
                android:text="\n5.  Selesai makan baca doa sesudah makan\n\n"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/e"
                android:layout_below="@+id/textView3"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg"
                android:text="\n6.  Membereskan kembali peralatan makan\n\n"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/o"
                android:layout_below="@+id/textView3"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg"
                android:text="\n7.  Membuang sampah bekas makanan pada tempatnya\n\n"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/p"
                android:layout_below="@+id/textView3"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg"
                android:text="\n8. Menyimpan kembali tas pada tempatnya\n\n"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/q"
                android:layout_below="@+id/textView3"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
