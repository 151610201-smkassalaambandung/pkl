<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_surat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/uin"
    tools:context="pulau.com.materikeagamaan.Surat">

    <TextView
        android:text="Surat-Surat Pendek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#ff000000"
        android:fontFamily="cursive"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:text="Q.S Al-Fatihah"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#f97be6"
                android:layout_marginTop="15dp"
                android:id="@+id/button1" />

            <Button
                android:text="Q.S An Naas"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#c289f7"
                android:layout_marginTop="10dp"
                android:id="@+id/button2" />

            <Button
                android:text="Q.S Al Falaq"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#9b85ea"
                android:layout_marginTop="10dp"
                android:id="@+id/button3" />

            <Button
                android:text="Q.S Al Ikhlas"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#8df2ed"
                android:layout_marginTop="10dp"
                android:id="@+id/button4" />

            <Button
                android:text="Q.S Al Lahab"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#89f797"
                android:layout_marginTop="10dp"
                android:id="@+id/button5" />

            <Button
                android:text="Q.S An Nashr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#f9f37b"
                android:layout_marginTop="10dp"
                android:id="@+id/button6" />

            <Button
                android:text="Q.S Al Kaafiirun"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#f9c97b"
                android:layout_marginTop="10dp"
                android:id="@+id/button7" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
