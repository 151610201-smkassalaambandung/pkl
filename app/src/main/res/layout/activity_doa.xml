<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/uin"
    tools:context="pulau.com.materikeagamaan.Doa">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:text="Do’a Harian"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#7bc662"
                android:layout_marginTop="15dp"
                android:id="@+id/button1" />

            <Button
                android:text="Do’a sebelum dan sesudah makan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#7684fc"
                android:layout_marginTop="10dp"
                android:id="@+id/button6" />


            <Button
                android:text="Do’a masuk dan keluar kamar mandi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#f9e323"
                android:layout_marginTop="10dp"
                android:id="@+id/button8" />

            <Button
                android:text="Do’a masuk dan keluar rumah"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#ff4e95"
                android:layout_marginTop="10dp"
                android:id="@+id/button10" />
            <Button
                android:text="Do’a naik Kendaraan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#60fda7"
                android:layout_marginTop="10dp"
                android:id="@+id/button12" />
            <Button
                android:text="Do’a sebelum dan sesudah belajar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#5bc9fc"
                android:layout_marginTop="10dp"
                android:id="@+id/button13" />
            <Button
                android:text="Do’a keselamatan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#d955fa"
                android:layout_marginTop="10dp"
                android:id="@+id/button15" />
            <Button
                android:text="Do’a untuk orang tua"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#ff000000"
                android:background="#fc4b48"
                android:layout_marginTop="10dp"
                android:id="@+id/button16" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
